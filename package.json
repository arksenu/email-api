{
  "name": "fly-bot-email-api",
  "version": "1.0.0",
  "description": "Email API service wrapping Manus.im Mail Manus",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:admin",
    "build:admin": "cd admin && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:admin": "cd admin && npm run dev",
    "migrate": "psql $DATABASE_URL -f migrations/001_initial.sql && psql $DATABASE_URL -f migrations/002_admin.sql",
    "seed": "ts-node scripts/seed-workflows.ts",
    "seed:admin": "ts-node scripts/seed-admin.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
